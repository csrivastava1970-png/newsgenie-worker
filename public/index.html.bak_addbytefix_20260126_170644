<script>
(function(){
  if (window.__NG_STD_UI_TOOLBAR_MINI_V1) return;
  window.__NG_STD_UI_TOOLBAR_MINI_V1 = true;

  function setMode(mode){
    const visualsWrap = document.querySelector("#visualsWrap");
    const tInbox = document.querySelector("#ng-transcript-inbox") || document.querySelector("#ng-transcript-loader") || document.querySelector("#ng-transcript-loader-wrap");
    if (mode === "simple"){
      if (visualsWrap) visualsWrap.style.display = "none";
      if (tInbox) tInbox.style.display = "none";
    } else {
      if (visualsWrap) visualsWrap.style.display = "block";
      if (tInbox) tInbox.style.display = "block";
    }
    const pill = document.querySelector("#ng-ui-mode-pill");
    if (pill) pill.textContent = "mode: " + mode;
    window.__NG_UI_MODE = mode;
  }

  document.addEventListener("click", (e)=>{
    const id = e.target && e.target.id;

    if (id === "ng-ui-simple") setMode("simple");
    if (id === "ng-ui-advanced") setMode("advanced");

    if (id === "ng-ui-storyview") {
      const sv = document.querySelector("#ng-storyview") || document.querySelector("#storyView") || document.querySelector("#ng-storyview-v9");
      if (sv) sv.scrollIntoView({behavior:"smooth", block:"start"});
      else alert("StoryView panel not found in DOM.");
    }

    if (id === "ng-ui-commit") {
      const sel = [...document.querySelectorAll("#ng-sec-transcript-lines .line.selected, #ng-sec-transcript-lines .ng-line.selected, #ng-sec-transcript-lines [data-selected='1']")]
        .map(el => (el.textContent||"").trim()).filter(Boolean);
      const ta = document.querySelector("#ng-byte-draft-text");
      if (!ta) return alert("Draft textarea (#ng-byte-draft-text) not found");
      if (!sel.length) return alert("No transcript lines selected");
      const add = sel.join("\n");
      ta.value = (ta.value ? (ta.value + "\n") : "") + add;
      ta.dispatchEvent(new Event("input",{bubbles:true}));
      alert("Committed "+sel.length+" line(s) to Draft Byte.");
    }
  }, true);

  setMode("advanced");
})();
</script>
